{% set bigHeroHeadline = pimcore_input('bigHeroHeadline') %}
{% set bigHeroLink1 = pimcore_link('bigHeroLink1') %}
{% set bigHeroLink2 = pimcore_link('bigHeroLink2') %}
{% set bigHeroVideo = pimcore_video('bigHeroVideo', {
    width: '100%',
    height: 675,
    youtube: {
        autoplay: 1,
        controls: 0,
        showinfo: 0,
        rel: 0,
        loop: 1,
        modestbranding: 1,
        wmode: 'transparent',
        muted: 1
    },
    vimeo: {
        autoplay: 1,
        loop: 1,
        title: 0,
        byline: 0,
        background: 1
    },
    attributes: [
        'autoplay',
        'loop',
        'muted',
        'data-uk-cover'
    ]
}) %}

{% if editmode or not bigHeroVideo.isEmpty() %}
    <div class="uk-container">
        <div class="uk-section uk-section-media uk-padding-remove-vertical">
            <div class="uk-cover-container uk-height-large">
                {{ bigHeroVideo|raw }}

                {% if editmode or not bigHeroHeadline.isEmpty() %}
                    <div class="uk-overlay uk-padding-large uk-position-bottom">
                        <div class="uk-grid" data-uk-grid>
                            <div class="uk-width-2-3@m uk-width-1-1">
                                <h1 class="uk-h3">{{ bigHeroHeadline|raw }}</h1>

                                {% if editmode or not bigHeroLink1.isEmpty() or not bigHeroLink2.isEmpty() %}
                                    <div class="uk-grid uk-grid-small uk-child-width-auto" data-uk-grid>
                                        {% if editmode or not bigHeroLink1.isEmpty() %}
                                            <div>
                                                {{ bigHeroLink1|raw }}
                                            </div>
                                        {% endif %}

                                        {% if editmode or not bigHeroLink2.isEmpty() %}
                                            <div>
                                                {{ bigHeroLink2|raw }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endif %}